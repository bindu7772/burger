<div class="jumbotron text-center ttl">
    <h1>Eat Da Burger !</h1>
    <p class="f-style"><span class="glyphicon glyphicon-cutlery"></span> There is no sincerer love than the love of food.</p>
</div>
<div class="container">
    <div class="row">
        <div class="col-md-6 text-center ip">
            <div class="card">
                <div class="card-body">
                    <form class="create-form">
                        <div class="form-group">
                            <h4 class="card-title ttl-color"><label for="burgerName">Enter Burger Name: </label></h4>
                            <input type="text" id="name" name="burgerName">
                        </div>
                        <button type="submit" class="btn add">Add a Burger</button>
                    </form>
                </div>
            </div>
        </div>
    </div>
    <div class="row">
        <div class="col-md-4 bg">
            <ul>
                {{#each burgers}}
                {{#unless devoured}}
                <li>
                    <div class="row">
                        <div class="col">
                            {{ burger_name }}
                        </div>
                        <div class="col">
                            <button class="btn devour-btn" data-id={{id}} data-status={{devoured}}>Devour It!</button>
                        </div>
                    </div>
                </li>
                {{/unless}}
                {{/each}}
            </ul>
        </div>

        <div class="col-md-3 bg">
            <ul>
                {{#each burgers}}
                {{#if devoured}}
                <li>
                    {{ burger_name }}
                </li>
                {{/if}}
                {{/each}}
            </ul>
        </div>
    </div>
</div>
<footer class="footer text-center">
    <div class="container align-middle">
        <p>@Copyright Mansi Patel</p>
    </div>
</footer>